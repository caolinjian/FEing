extends ../layout.jade
block title 
    title #{title}
block afterhead
    link(
        rel = 'stylesheet'
        href = '#{globalPageData.cdn}libs/bootstrap/dist/css/bootstrap.min.css'
    )
    link(
        rel = 'stylesheet'
        href = '#{globalPageData.cdn}css/index.css'
    )
block content
    .container
        .page-header
            h1
                | Hello Front-end Engineer
                small 前端攻城师修炼ing...
        .row
            .col-md-6
                .panel.panel-info
                    .panel-heading D3
                    .panel-body
                        p 关于D3的一些test页面
                    ul.list-group
                        a.list-group-item(href='/test/d3test1') d3test1
                        -for(var x =1;x<6;x++)
                            a.list-group-item(href='/test/d3learn#{x}') d3learn#{x}
            .col-md-6
                .panel.panel-info
                    .panel-heading html5/css3
                    .panel-body
                        p 关于html5/css3的一些test页面
                    ul.list-group
                        -for(var x =1;x<4;x++)
                            a.list-group-item(href='/test/test#{x}') test#{x}
        .row
            .col-md-6
                .panel.panel-info
                    .panel-heading canvas
                    .panel-body
                        p 关于canvas的一些test页面
                    ul.list-group
                        a.list-group-item(href='/test/testCanvas') testCanvas
                        a.list-group-item(href='/test/snake') 贪吃蛇游戏
            .col-md-6
                .panel.panel-info
                    .panel-heading angular
                    .panel-body
                        p 关于angular的一些test页面
                    ul.list-group
                        a.list-group-item(href='/test/angular1') angular1
            
block afterbody
    script#J_requireScript(data-main='#{globalPageData.cdn}js/config' data-entrance='index' src='#{globalPageData.cdn}libs/requirejs/require.js')